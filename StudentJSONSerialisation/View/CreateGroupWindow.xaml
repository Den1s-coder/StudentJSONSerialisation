<Window x:Class="StudentJSONSerialisation.View.CreateGroupWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StudentJSONSerialisation.View"
        mc:Ignorable="d"
        Title="CreateGroupWindow" Height="250" Width="300">
    <Grid>
        <TextBox x:Name="NameTextBox" HorizontalAlignment="Center" Margin="0,76,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        <Label Content="Введіть назву групи:" HorizontalAlignment="Left" Margin="90,45,0,0" VerticalAlignment="Top"/>
        <Button Content="Create" HorizontalAlignment="Center" Margin="0,153,0,0" VerticalAlignment="Top" Style="{StaticResource AnotherWindowsButton}" Click="Button_Click"/>

    </Grid>
</Window>
